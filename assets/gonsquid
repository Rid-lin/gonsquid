description="gonsquid Go Mikrotik Traffic Controller"

# extra_started_commands="reload graceful"
# required_files=$gonsquid_CONF

name=$RC_SVCNAME
cfgfile="/etc/$RC_SVCNAME/config.yaml"
command="/usr/local/bin/gonsquid/gonsquid"
pidfile="/run/$RC_SVCNAME.pid"
command_background="yes"
logpath="/var/log/$RC_SVCNAME"

depend() {
	need net
	after firewall
}

checkconfig() {
	if [ ! -f "${cfgfile}" ] ; then
		ewarn "${cfgfile} does not exist."
		return 1
	fi
	
	if [ ! -f "$logpath" ] ; then
		mkdir -p "$logpath"
		return 0
	fi

	# if [ -z "${gonsquid_PID}" ] ; then
		# ewarn "server.pid-file variable in ${gonsquid_CONF}"
		# ewarn "is not set. Falling back to gonsquid.pid"
		# gonsquid_PID="/run/gonsquid.pid"
	# fi
}

start() {
    ebegin "Starting gonsquid"
    start-stop-daemon --start \
		--exec "$command" \
        --background \
		--stdout "$logpath/error.log" \
		--stderr "$logpath/error.log" \
		--pidfile "$pidfile" --quiet
	eend
}

stop() {
	ebegin "Stopping gonsquid"
	start-stop-daemon --stop --quiet "$command" \
		--pidfile "$pidfile" --quiet
	eend
}

